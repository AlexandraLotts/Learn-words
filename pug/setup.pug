extends templates
block title
	title Setup an exercise

block content
	.navigation
		.container
			.row
				.col
					p 
						a(href='#')
							img.nav-icon(src='../assets/img/general-icons/arrow-left.svg')
				.col-6
					p.text-center.font-weight-bold Setup an exercise

				.col.text-right
					p
						a(href='#')
							img.nav-icon(src='../assets/img/general-icons/question-white.svg')
		
	.container.setup-exs-block
		.row
			.container
				.row.justify-content-center
					.col-8
						.row
							.col
								p.text-uppercase Exercise type
							
							.col.text-right
								p 
									a(href='#')
										img.arrow-right(src='../assets/img/general-icons/arrow-right.svg')
						.row
							.col
								p.text-uppercase Answer type
							
							.col.text-right
									p Multiple choice
										a(href='#')
											img.arrow-right(src='../assets/img/general-icons/arrow-right.svg')
						.row
							.col
								p.text-uppercase Problematic words only
							
							.col.text-right
									.row.no-gutters
										.col.mr-2
											label.switch
												input(type='checkbox')
												.slider.round
										.col-1.mt-1
											a(href='#')
												img.question-icon(src='../assets/img/general-icons/question-white.svg')
						.row
							.col
								p.text-uppercase New words only
							
							.col.text-right
									.row.no-gutters
										.col.mr-2
											label.switch
												input(type='checkbox')
												.slider.round
										.col-1.mt-1
											a(href='#')
												img.question-icon(src='../assets/img/general-icons/question-white.svg')
						.row
							.col
								p.text-uppercase Number of exercise
							
							.col.text-right
									p 10 20 30
			.container
				.row.justify-content-center
					.col.text-center
							p 
								a(href='#') Start exercise


								