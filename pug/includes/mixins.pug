mixin navigation(href1, name1, href2, name2, href3, name3, src)
	.col
		p 
			a(class!=attributes.class href=href1)= name1
	.col-6
		p.text-center.font-weight-bold 
			a(class!=attributes.class href=href2)= name2
	.col.text-right
		p
			a(class!=attributes.class href=href3)= name3
				img(class!=attributes.class src=src)


mixin flags(src, title, src2)
	a.flags-links(href='#')
		.media.flags
			img.d-flex.align-self-center.mr-3(src=src)
			.media-body
				p.mt-3 #{title}
			img(class!=attributes.class src=src2)

mixin information(title, src)
	.row.bb.mt-3
		.col-8
			.row.no-gutters
				.col-3.col-md-1
					img.settings-big-icon(src=src)
				.col.text-left
					p #{title}
		.col.text-right
			p
				a(href='#')
					img.arrow-right(src='../assets/img/general-icons/arrow-right.svg')
	
mixin settings(title)
	.row.bb.mt-3
		.col
			p #{title}
		.col.text-right
			p 
				a(href='#')
					img.arrow-right(src='../assets/img/general-icons/arrow-right.svg')

mixin tree-icon(title1, src1, title2, src2, title3, src3)
	span.pr-1 
		strong #{title1}
	img(class!=attributes.class src=src1)
	span.pr-1 
		strong #{title2}
	img(class!=attributes.class src=src2)
	span.pr-1 
		strong #{title3}
	img(class!=attributes.class src=src3)

mixin enrich-w-columns(title1, title2, href1, src1, href2, src2, href3, src3, href4, src4, href5, src5, href6, src6)
		.col-4.col-md-4.words
			img.checked-icon(src='../assets/img/checkbox_checked_blue.png')
			span #{title1}
		.col-3.col-md-4.col-sm-4.text-center.words
			p #{title2}
		.col-5.col-sm-4.col-md-4.text-right.words
			.row.justify-content-end
				.col-7.col-md-4.col-lg-3.mtm-10.icons-group
					a(href=href1)
						img.wdth-19(src=src1) 
					a(href=href2)
						img.wdth-19(src=src2) 
					br
					a(href=href3)
						img.wdth-19(src=src3)
					a(href=href4)
						img.wdth-19(src=src4)
				.col-5.col-md-4.col-lg-3.icons-group
					a(href=href5)
						img.close-icon(src=src5)
					a(href=href6)
						img.arrow-right(src=src6)


mixin store(title, subtitle, price, href)
		.col-sm-12.col-md-6
			.row.no-gutters
				.col-2.col-md-2.col-lg-1.store-img
					img.animals(src='../assets/img/store/store_icon@2x.png')
				.col-8.col-md-7.col-lg-8
					p.store-title #{title}
					p.store-subtitle #{subtitle}
				.col-2.col-md-3.col-lg-2.text-right
					p.store-title.price #{price}
					p.store-button-st
						a(href=href)
							span BUY
mixin word-list(word,translation)
	.row.bb
			.col-6.mt-3
				.row
					.col-3.col-md-2.mt-3
						img.play-img.checked-icon(src='../assets/img/general-icons/play-button.svg')
					.col.text-left
						p #{word}
						p #{translation}
		
			.col-6.text-right.word-list-imgs.mt-3
				.row
					.col
						img.wdth-25(src='../assets/img/general-icons/star.svg')
						img.wdth-25(src='../assets/img/general-icons/edit.svg')
						img.wdth-25(src='../assets/img/general-icons/cancel.svg')
				.row
					.col
						img.wdth-19(src='../assets/img/word_edit/blue_male@2x.png')
						img.wdth-19(src='../assets/img/word_edit/blue_neuter@2x.png')
						img.wdth-19(src='../assets/img/word_edit/image_icon@2x.png')
						img.wdth-19(src='../assets/img/word_edit/tag_icon@2x.png')

mixin review(href, title1, title2, src1, number, title3)
	.col-6.mt-3
		.row
			.col-3.col-md-2.col-lg-1
				img.play-img.checked-icon.pr-1(src='../assets/img/checkbox_checked_blue.png')
			.col.text-left.title-review-bl
				p #{title1}
				p #{title2}

	.col-6.text-right.review-list
		.row.no-gutters
			.col-3.col-md-7.col-lg-9.pb-3
				img.animals(src=src1)
			
			.col.col-md-5.col-lg-3.choose-another
				a(href=href)
					span
						i #{number}
						img(src='../assets/img/buttons/choose_another_button@2x.png')
						p.text-center #{title3}